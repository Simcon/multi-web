---
// Basic Dark Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta-dark-bg.webp'
import badge from '../../../assets/badge.svg'
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Save 100+ Hours on Every App You Build!"
				text="Stop rewriting the same boilerplate for every platform. Multi Framework lets you build once and deploy everywhere — web, mobile, desktop, and more — from a single codebase. With ready-made templates, shared logic, and multiple code samples you can copy-paste and adapt, you skip weeks of setup and busywork."
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<Image src={badge} alt="Product of the Year" class="h-12 w-12" slot="button" />
					<!-- <span class="hidden md:block">Build faster. Ship sooner.</span> -->
					<!-- <Highlight classes="md:ml-2"> Repeat </Highlight> -->
					 <span>Build faster. Ship sooner. </span>
					 <Highlight classes="ml-2"> Repeat </Highlight>
				</ChipNotification>
				<Button size="lg" style="primary" link='https://tally.so/r/Gx6VYz'> 50% early-access discount </Button>
			</CTA>
		</Col>
		<Col span="1" />
	</Row>
</Section>
