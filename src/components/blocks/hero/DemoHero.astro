---
// Contact Hero Section
// ------------
// Description: A hero section with a contact form

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Form from '../contact/BasicForm.astro'
import { Image } from 'astro:assets'
// Content
// - Hero Image
import heroImage from '../../../assets/hero-01.png'
import appstoreImage from '../../../assets/appstore_logos/app_store.jpg'
import appstoreMacImage from '../../../assets/appstore_logos/app_store.jpg'
import playstoreImage from '../../../assets/appstore_logos/play_store.jpg'
import microsoftStoreImage from '../../../assets/appstore_logos/microsoft_store.jpg'

// Props
type Props = {
	id?: string
	title?: string
	text?: string
	classes?: string
}
const { id, title, text, classes } = Astro.props
---

<Section id={id} classes={classes}>
	<Row>
		<Col span="6" classes={`self-center`}>
			<header class="max-w-xl">
				<h1 set:html={title} />
				<p class="text-lg leading-relaxed">{text}</p>
			</header>
			<p class="mt-8">
				<a href="#">App Store</a>
			</p>
			<p>
				<a href="#">Play Store</a>
			</p>
			<p>
				<a href="#">App Store for Mac</a>
			</p>
			<p>
				<a href="#">Microsoft Store</a>
			</p>
			<p>
				<a href="https://app.multiframework.com" target="_blank">Web</a>
			</p>
		</Col>
		<Col span="6" classes="relative">
			<Image
				src={heroImage}
				alt="Multi Framework. Idea to App Store in Under an Hour"
				class="translate-y-8 shadow-2xl shadow-neutral-200 dark:shadow-neutral-950"
				format="webp"
			/>
		</Col>
	</Row>
	<Row>
		<Col span="1">

		</Col>
		<Col span="2" classes="mt-24">
			<Image
				src={appstoreImage}
				alt="App Store for iOS"
				class=""
				format="jpeg"
			/>
		</Col>
		<Col span="2" classes="mt-24">
			<Image
				src={playstoreImage}
				alt="Google Play Store"
				class=""
				format="jpeg"
			/>
		</Col>
		<Col span="2" classes="mt-24">
			<Image
				src={appstoreMacImage}
				alt="App Store for Mac"
				class=""
				format="jpeg"
			/>
		</Col>
		<Col span="2" classes="mt-24">
			<Image
				src={microsoftStoreImage}
				alt="Microsoft Store"
				class=""
				format="jpeg"
			/>
		</Col>
		<Col span="2" classes="mt-24">
			<a href="https://app.multiframework.com" target="_blank">
			<Image
				src={microsoftStoreImage}
				alt="Web"
				class=""
				format="jpeg"
			/>
			</a>
		</Col>

	</Row>
</Section>
